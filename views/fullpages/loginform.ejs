<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login Form</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col items-center justify-center relative">

  <!-- Navbar -->
  <nav class="bg-white shadow-md w-full py-4 px-8">
    <ul class="flex space-x-6">
      <li><a href="/register" class="text-blue-600 hover:underline">Register</a></li>
      <li><a href="/" class="text-blue-600 hover:underline">Login</a></li>
    </ul>
  </nav>

  <!-- Login Form -->
  <form action="/" method="post" class="bg-white p-8 rounded-xl shadow-md w-full max-w-md mt-10 ">
    <h2 class="text-2xl font-semibold mb-6 text-center">Login</h2>

   

    <div class="mb-4">
      <label for="email" class="block mb-1 font-medium">Email</label>
      <input type="text" id="username" name="email" required
             class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
    </div>

    <div class="mb-6">
      <label for="password" class="block mb-1 font-medium">Password</label>
      <input type="password" id="password" name="password" required
             class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
    </div>

    <button type="submit"
            class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition duration-200">
      Login
    </button>
   
   


     <!-- Show error message if any -->
    <% if (typeof error !== "undefined") { %>
      <div id="temp" class="mb-4 text-red-600 text-center font-semibold"><%= error %></div>
    <% } %>

    <!-- Show success message if any -->
    <% if (typeof message !== "undefined") { %>
      <div id="temp2" class="mb-4 text-green-600 text-center font-semibold"><%= message %></div>
    <% } %>
  </form>
 
  <div class="absolute flex flex-col justify-center items-center mt-4 hidden" id="redirect">
      <div class="min-w-12 min-h-12 border-4 mb-4 border-blue-500
       border-dashed rounded-full animate-spin" style="animation-duration: 15s;">
      </div>
      <p >redirecting ..... </p>
      <p>
        If you are not redirected automatically, please click <a href="/register" class="text-blue-600 hover:underline">here</a> to register.
      </p>
    </div>

 <% if(typeof redirect !== 'undefined') {%>
  <script>
   document.getElementById("redirect").classList.remove("hidden");
     setTimeout(() => {
      window.location.href = '/register';
    }, 4000); 
  </script>
<% } %>

